{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": false,
    "module": "esnext",
    "moduleResolution": "node",
    "baseUrl": "./src", 
    "paths": { 
      "src": ["./src/*"],
      "components": ["./src/components/*"],
      "screens": ["./src/screens/*"],
      "hooks": ["./src/hooks/*"],
      "common": ["./src/common/*"],
      "assets": ["./src/assets/*"],
  }
  },
  "include": ["App.tsx", "./src", "babel.config.js",  ".eslintrc.js", "metro.config.js"],
  "exclude": [
    "node_modules",  
  ]
}